<MainSrceen>:
    md_bg_color: app.theme_color

    MDBottomNavigation:
        id: bottom_navigation
        selected_color_background: .6, .1, .2, 1
        text_color_normal: .55, .55, .55, 1
        text_color_active: .99, .99, .99, 1
        panel_color: .15, .15, .15, 1
        md_bg_color: app.theme_color

        MDBottomNavigationItem:
            id: screen1
            name: 'screen1'
            text: 'Accounts'
            icon: 'Icons/Btn_icon/Accounts-icon-white.png'

            AccountsMenu:
                id: AccountsMenu_id

        MDBottomNavigationItem:
            id: screen2
            name: 'screen2'
            text: 'Categories'
            icon: 'Icons/Btn_icon/Categories-icon-white.png'

            on_tab_press:
                root.update_month_in_CategoriesMenu()


            CategoriesMenu:
                id: CategoriesMenu

        MDBottomNavigationItem:
            id: screen3
            name: 'screen3'
            text: "Transaction"
            icon: 'Icons/Btn_icon/Transaction-icon-white.png'

            on_tab_press:
                root.update_month_in_TransactionMenu()

            Transaction_menu:
                id: Transaction_menu


        MDBottomNavigationItem:
            id: screen4
            name: 'screen4'
            text: "Budget"
            icon: 'Icons/Btn_icon/Budget-icon-white.png'

            BudgetMenu_in:
                id: BudgetMenu_in

        MDBottomNavigationItem:
            name: 'screen5'
            text: 'Overview'
            icon: 'Icons/Btn_icon/Overview-icon-white.png'

            Label:
                text: "Overview"
                canvas.before:
                    Color:
                        rgba: .2, .2, .2, 1
                    Rectangle:
                        size: self.size
                        pos: self.pos

    MenuForTransactionAdding:
        id: menu_for_transaction_adding
