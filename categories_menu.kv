<CategoriesMenu>:
    background_color: .2, .2, .2, 1

    MDTopAppBar:
        id: month_menu

        elevation: 4
        pos_hint: {"top": 1}

        MDIconButton:
            icon: 'Icons/next.png'
            on_release: root.next_swiper_item()

    MDSwiper:
        id: my_swiper

        size_hint_y: None
        height: root.height - month_menu.height - dp(40)
        y: root.height - self.height - month_menu.height - dp(20)

        background_color: .2, .2, .2, 1

        items_spacing: 0

        MDSwiperItem:

            BoxLayout:
                id: CategoriesMenu

                orientation: 'horizontal'

                BoxLayout:
                    orientation: 'vertical'

                    size_hint_x: .5

                    Button:
                        id: Categories_0_Menu_Button


                        background_normal: ''

                    Button:
                        id: Categories_4_Menu_Button

                        background_normal: ''

                    Button:
                        id: Categories_6_Menu_Button

                        background_normal: ''

                    Button:
                        id: Categories_8_Menu_Button

                        background_normal: ''

                    Button:
                        id: Categories_12_Menu_Button

                        background_normal: ''

                BoxLayout:
                    orientation: 'vertical'

                    BoxLayout:
                        orientation: 'horizontal'

                        Button:
                            id: Categories_1_Menu_Button

                            #size_hint_y: .1

                            background_normal: ''

                        Button:
                            id: Categories_2_Menu_Button

                            #size_hint_x: .1

                            background_normal: ''

                    AnchorLayout:
                        size_hint_y: 2

                        Button:
                            text: "stat"

                            background_normal: 'Diagrams/pie_chart_pic/pie_chart.png'

                    BoxLayout:
                        orientation: 'horizontal'

                        Button:
                            id: Categories_9_Menu_Button

                            background_normal: ''

                        Button:
                            id: Categories_10_Menu_Button

                            background_normal: ''

                    BoxLayout:
                        orientation: 'horizontal'

                        Button:
                            id: Categories_13_Menu_Button

                            background_normal: ''


                        Button:
                            id: Categories_14_Menu_Button

                            background_normal: ''

                BoxLayout:
                    orientation: 'vertical'

                    size_hint_x: .5

                    Button:
                        id: Categories_3_Menu_Button

                        background_normal: ''

                    Button:
                        id: Categories_5_Menu_Button

                        background_normal: ''

                    Button:
                        id: Categories_7_Menu_Button

                        background_normal: ''

                    Button:
                        id: Categories_11_Menu_Button

                        background_normal: ''

                    Button:
                        id: Categories_15_Menu_Button

                        background_normal: ''

        MDSwiperItem: