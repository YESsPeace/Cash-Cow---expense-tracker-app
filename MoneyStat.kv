<MainMenuWidget>:
    BoxLayout:

        id: MainMenuWidget

        orientation: "vertical"

        AnchorLayout:
            id: top_layout_background

            size_hint: 1, 0.15
            # height: "125dp"

            canvas.before:
                Color:
                    rgba: .5, .5, .5, 1
                Rectangle:
                    size: self.size
                    pos: self.pos

            BoxLayout:
                id: top_layout

                orientation: "vertical"

                BoxLayout:
                    id: top_layout_menu_balance

                    size_hint: 1, None
                    height: top_layout_background.height * 0.6

                    Button:
                        id: top_menu_btn

                        background_normal: "Icons/menu.png"
                        background_down: "Icons/menu_down.png"

                        size_hint: None, 1
                        width: top_layout_background.height * 0.6

                    BoxLayout:
                        orientation: "vertical"

                        Label:
                            text: "1630 руб."
                            font_size: 24

                    Button:
                        id: top_edit_btn

                        background_normal: "Icons/pencil.png"
                        background_down: "Icons/pencil_down.png"

                        size_hint: None, 1
                        width: top_layout_background.height * 0.6


                BoxLayout:
                    id: middle_top_layout

                    orientation: "horizontal"

                    size_hint: 1, None
                    height: "50dp"

                    Button:
                        id: left_btn

                        background_normal: "Icons/next - Copy.png"
                        background_down: "Icons/next - Copy_down.png"

                        size_hint: None, 1
                        width: middle_top_layout.height

                    Button:
                        id: middle_btn

                        text: "MAY 2022"
                        background_color: .5, .5, .5, 1
                        background_normal: "None"
                        background_down: "Icons/down_Layer.png"

                        on_press: root.click_on_month_in_main()

                    Button:
                        id: right_btn

                        background_normal: "Icons/next.png"
                        background_down: "Icons/next_down.png"

                        size_hint: None, 1
                        width: middle_top_layout.height

        PageLayout:
            id: my_PageLayout

            page: 1

            on_touch_move: root.page_layout_swipe_detected()

            AccountsMenu:
                id: AccountsMenu_id

            CategoriesMenu:

            Label:
                text: "Transaction"
                canvas.before:
                    Color:
                        rgba: .25, .25, .25, 1
                    Rectangle:
                        size: self.size
                        pos: self.pos

            Label:
                text: "Budget"
                canvas.before:
                    Color:
                        rgba: .3, .3, .3, 1
                    Rectangle:
                        size: self.size
                        pos: self.pos


        BoxLayout:
            id: bottom_navigation_layout

            size_hint: 1, None
            height: "75dp"

            Button:
                id: bottom_navigation_layout_accounts_button

                text: "Accounts"
                on_press: my_PageLayout.page = 0
                on_press: root.from_any_menus_to_accounts_menu()
                on_press: root.top_menu_toggle_button_setter()

            Button:
                id: bottom_navigation_layout_categories_button

                text: "Categories"
                on_press: my_PageLayout.page = 1
                on_press: root.return_any_page_layout_from_accounts_menu()

            Button:
                id: bottom_navigation_layout_transaction_button

                text: "Transaction"
                on_press: my_PageLayout.page = 2
                on_press: root.return_any_page_layout_from_accounts_menu()

            Button:
                id: bottom_navigation_layout_budget_button

                text: "Budget"
                on_press: my_PageLayout.page = 3
                on_press: root.return_any_page_layout_from_accounts_menu()
