MDScreen:

<MDScreen>:
    md_bg_color: 0, 0, 0, 1

    MainMenuWidget
        BoxLayout:

            id: MainMenuWidget

            orientation: "vertical"

            AnchorLayout:
                id: top_layout_background

                size_hint: 1, 0.15
                # height: "125dp"

                canvas.before:
                    Color:
                        rgba: .5, .5, .5, 1
                    Rectangle:
                        size: self.size
                        pos: self.pos

                BoxLayout:
                    id: top_layout

                    orientation: "vertical"

                    BoxLayout:
                        id: top_layout_menu_balance

                        size_hint: 1, None
                        height: top_layout_background.height * 0.6

                        Button:
                            id: top_menu_btn

                            background_normal: "Icons/menu.png"
                            background_down: "Icons/menu_down.png"

                            size_hint: None, 1
                            width: top_layout_background.height * 0.6

                        BoxLayout:
                            orientation: "vertical"

                            Label:
                                text: "1630 руб."
                                font_size: 24

                        Button:
                            id: top_edit_btn

                            background_normal: "Icons/pencil.png"
                            background_down: "Icons/pencil_down.png"

                            size_hint: None, 1
                            width: top_layout_background.height * 0.6


                    BoxLayout:
                        id: middle_top_layout

                        orientation: "horizontal"

                        size_hint: 1, None
                        height: "50dp"

                        Button:
                            id: left_btn

                            background_normal: "Icons/next - Copy.png"
                            background_down: "Icons/next - Copy_down.png"

                            size_hint: None, 1
                            width: middle_top_layout.height

                        Button:
                            id: middle_btn

                            text: "MAY 2022"
                            background_color: .5, .5, .5, 1
                            background_normal: "None"
                            background_down: "Icons/down_Layer.png"

                            on_press: root.click_on_month_in_main()

                        Button:
                            id: right_btn

                            background_normal: "Icons/next.png"
                            background_down: "Icons/next_down.png"

                            size_hint: None, 1
                            width: middle_top_layout.height

            MDSwiper:
                id: swiper

                items_spacing: 0

                MDSwiperItem:
                    AccountsMenu:
                        id: AccountsMenu_id

                MDSwiperItem:
                    CategoriesMenu:
                        id: CategoriesMenu

                MDSwiperItem:
                    Label:
                        text: "Transaction"
                        canvas.before:
                            Color:
                                rgba: .25, .25, .25, 1
                            Rectangle:
                                size: self.size
                                pos: self.pos

                MDSwiperItem:
                    Label:
                        text: "Budget"
                        canvas.before:
                            Color:
                                rgba: .3, .3, .3, 1
                            Rectangle:
                                size: self.size
                                pos: self.pos


            BoxLayout:
                id: bottom_navigation_layout

                size_hint: 1, None
                height: "75dp"

                MDRectangleFlatButton:
                    id: bottom_navigation_layout_accounts_button

                    size_hint: 1, 1

                    text: "Accounts"
                    text_color: "white"
                    line_color: "white"

                    on_release: swiper.set_current(0)

                MDRectangleFlatButton:
                    id: bottom_navigation_layout_categories_button
                    size_hint: 1, 1


                    text: "Categories"
                    text_color: "white"
                    line_color: "white"

                    on_release: swiper.set_current(1)

                MDRectangleFlatButton:
                    id: bottom_navigation_layout_transaction_button
                    size_hint: 1, 1


                    text: "Transaction"
                    text_color: "white"
                    line_color: "white"

                    on_release: swiper.set_current(2)

                MDRectangleFlatButton:
                    id: bottom_navigation_layout_budget_button
                    size_hint: 1, 1


                    text: "Budget"
                    text_color: "white"
                    line_color: "white"

                    on_release: swiper.set_current(3)
