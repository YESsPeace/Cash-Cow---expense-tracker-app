MainMenuWidget:

<AccountsMenu_stat>:
    orientation: "vertical"

    Label:
        id: AccountsMenu_stat_label

        text: "Accounts stat will be here"


    Button:
        text: "click me to test"
        on_press: root.click()


<AccountsMenu_main>:
    orientation: "vertical"
    spacing: "1dp"

    canvas.before:
        Color:
            rgba: .3, .3, .3, 1
        Rectangle:
            size: self.size
            pos: self.pos

    BoxLayout:
        id: accounts_box

        canvas.before:
            Color:
                rgba: .15, .15, .15, 1
            Rectangle:
                size: self.size
                pos: self.pos

    BoxLayout:
        id: savings_box

        canvas.before:
            Color:
                rgba: .15, .15, .15, 1
            Rectangle:
                size: self.size
                pos: self.pos

<AccountsMenu>:
    AccountsMenu_main:
        id: AccountsMenu_main_id




