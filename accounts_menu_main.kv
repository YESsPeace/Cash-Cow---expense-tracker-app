<AccountsMenu_main>:
    orientation: "vertical"
    spacing: "1dp"

    canvas.before:
        Color:
            rgba: .3, .3, .3, 1
        Rectangle:
            size: self.size
            pos: self.pos

    BoxLayout:
        id: accounts_box

        canvas.before:
            Color:
                rgba: .2, .2, .2, 1
            Rectangle:
                size: self.size
                pos: self.pos

    BoxLayout:
        id: savings_box

        canvas.before:
            Color:
                rgba: .2, .2, .2, 1
            Rectangle:
                size: self.size
                pos: self.pos
