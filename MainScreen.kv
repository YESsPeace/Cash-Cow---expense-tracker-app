                    Rectangle:
                        size: self.size
                        pos: self.pos

        MDBottomNavigationItem:
            name: 'screen 5'
            text: 'Overview'
            icon: 'Icons/Overview-icon-white.png '

            Label:
                text: "Overview"
                canvas.before:
                    Color:
