<MainSrceen>:

    MDBottomNavigation:
        id: bottom_navigation
        selected_color_background: "grey"
        text_color_active: "lightgrey"

        MDBottomNavigationItem:
            name: 'screen1'
            text: 'Accounts'
            icon: 'Icons/Btn_icon/Accounts-icon-white.png'

            AccountsMenu:
                id: AccountsMenu_id

        MDBottomNavigationItem:
            name: 'screen2'
            text: 'Categories'
            icon: 'Icons/Btn_icon/Categories-icon-white.png'
            on_tab_press:
                screen3.clear_widgets()

            CategoriesMenu:
                id: CategoriesMenu

        MDBottomNavigationItem:
            id: screen3
            name: 'screen3'
            text: "Transaction"
            icon: 'Icons/Btn_icon/Transaction-icon-white.png'

            on_tab_press:
                self.add_widget(root.menu())

        MDBottomNavigationItem:
            name: 'screen4'
            text: "Budget"
            icon: 'Icons/Btn_icon/Budget-icon-white.png'

            Label:
                text: "Budget"
                canvas.before:
                    Color:
                        rgba: .2, .2, .2, 1
                    Rectangle:
                        size: self.size
                        pos: self.pos

        MDBottomNavigationItem:
            name: 'screen5'
            text: 'Overview'
            icon: 'Icons/Btn_icon/Overview-icon-white.png '

            Label:
                text: "Overview"
                canvas.before:
                    Color:
                        rgba: .2, .2, .2, 1
                    Rectangle:
                        size: self.size
                        pos: self.pos

