    MDBottomNavigation:
        id: bottom_navigation
        selected_color_background: "grey"
        text_color_active: "lightgrey"

        MDBottomNavigationItem:
            name: 'screen 1'
            text: 'Accounts'
            icon: 'Icons/Accounts-icon-white.png'

            AccountsMenu:
                id: AccountsMenu_id

        MDBottomNavigationItem:
            name: 'screen 2'
            text: 'Categories'
            icon: 'Icons/Categories-icon-white.png'

            CategoriesMenu:
                id: CategoriesMenu

        MDBottomNavigationItem:
            name: 'screen 3'
