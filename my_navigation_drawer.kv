#: import webbrowser webbrowser

<DrawerClickableItem>:
    md_bg_color: [.2, .2, .2, 1]

    MDLabel:
        text: root.button_name

<MyNavigationDrawer>:
    id: nav_drawer
    radius: (0, 0, 0, 0)
    width: "240dp"
    orientation: 'vertical'

    MDNavigationDrawerMenu:
        spacing: dp(5)

        DrawerClickableItem:
            button_name: 'Main'
            on_release:
                app.root.ids.main_screen_manager.current = 'main'
                root.set_state('close')

        DrawerClickableItem:
            button_name: 'Settings'
            on_release:
                app.root.ids.main_screen_manager.current = 'export'
                root.set_state('close')

    MDBoxLayout:
        size_hint: 1, None
        adaptive_height: True
        orientation: 'vertical'
        spacing: dp(5)

        MDBoxLayout:
            size_hint_y: None
            height: dp(50)
            orientation: 'horizontal'

            MDLabel:
                text: 'About'
                font_style: 'H6'

        MDCard:
            size_hint_y: None
            height: dp(50)
            padding: dp(5)
            spacing: dp(5)

            MDIcon:
                pos_hint: {'center_x': 0.5, 'center_y': 0.5}
                icon: 'information-outline'

            MDLabel:
                text: 'CashCow 1.0'

        BoxLayoutButton:
            spacing: dp(5)
            md_bg_color: [.2, .2, .2, 1]

            on_release:
                webbrowser.open('https://boosty.to/yesspeace/donate')

            MDIcon:
                pos_hint: {'center_x': 0.5, 'center_y': 0.5}
                icon: 'hand-coin'

            MDLabel:
                text: 'Support me'


        BoxLayoutButton:
            spacing: dp(5)
            md_bg_color: [.2, .2, .2, 1]

            on_release:
                webbrowser.open('https://github.com/YESsPeace/Cash-Cow---expense-tracker-app')

            MDIcon:
                pos_hint: {'center_x': 0.5, 'center_y': 0.5}
                icon: 'code-tags'

            MDLabel:
                text: 'Source code'