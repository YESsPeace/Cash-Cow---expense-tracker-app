<DrawerClickableItem>:
    md_bg_color: [.16, .16, .16, 1]

    MDLabel:
        text: root.button_name

<MyNavigationDrawer>:
    id: nav_drawer
    radius: (0, 0, 0, 0)
    width: "240dp"

    MDNavigationDrawerMenu:
        spacing: dp(5)

        DrawerClickableItem:
            button_name: 'Main'
            on_release:
                app.root.ids.main_screen_manager.current = 'main'
                root.set_state('close')

        DrawerClickableItem:
            button_name: 'Settings'
            on_release:
                app.root.open_menu_for_export_data()
                root.set_state('close')

