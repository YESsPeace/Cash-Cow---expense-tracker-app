<CategoriesMenu>:
    background_color: .2, .2, .2, 1

    MDBoxLayout:
        id: top_bar
        pos_hint: {"top": 1}
        orientation: 'vertical'
        size_hint_y: None
        height: top_btn_bar.height

        MDBoxLayout:
            id: top_btn_bar
            orientation: 'horizontal'
            size_hint_y: None
            height: dp(60)
            md_bg_color: .9, .7, .3, 1

            MDIconButton:
                icon: 'menu'
                on_release:
                    nav_drawer.set_state("open")

            MDLabel:
                text: '12904â‚½'
                font_size: 26
                halign: "center"
                valign: "middle"
                md_bg_color: .5, .7, .3, 1

            MDIconButton:
                icon: 'Icons/Btn_icon/pencil.png'

    Categories_buttons_menu:
        id: categories_buttons_menu
        size_hint_y: None
        height: root.height - top_bar.height
        y: root.height - self.height - top_bar.height

    MyNavigationDrawer:
        id: nav_drawer

