<BoxLayoutToggleButton@BoxLayoutButton>:


<CategoriesMenu>:
    md_bg_color: app.theme_color

    MDBoxLayout:
        orientation: 'vertical'
        pos_hint: {'top': 1}

        MDBoxLayout:
            id: top_bar
            pos_hint: {"top": 1}
            orientation: 'vertical'
            size_hint_y: None
            height: top_btn_bar.height + month_menu.height

            MDBoxLayout:
                id: top_btn_bar
                orientation: 'horizontal'
                size_hint_y: None
                height: dp(60)
                md_bg_color: .6, .1, .2, 1

                MDIconButton:
                    icon: ''
                    size_hint_y: 1
                    width: self.height

                    canvas.before:
                        Color:
                            rgba: .6, .1, .2, 1
                        Rectangle:
                            pos: self.pos
                            size: self.size

                MDLabel:
                    id: total_balance_label

                    text: str(root.total_accounts_balance)
                    halign: "center"
                    valign: "middle"
                    font_style: 'H4'


                MDIconButton:
                    icon: 'pencil'
                    size_hint_y: 1
                    width: self.height

                    on_release: root.start_edit_mode()

                    canvas.before:
                        Color:
                            rgba: .6, .1, .2, 1
                        Rectangle:
                            pos: self.pos
                            size: self.size

            MDBoxLayout:
                id: month_menu
                size_hint_y: None
                height: dp(40)

                md_bg_color: .6, .1, .2, 1

                MDIconButton:
                    icon: 'arrow-left'
                    icon_size: "24sp"
                    pos_hint: {"center_x": .5, "center_y": .5}
                    on_release:
                        root.load_previous_month()
                        app.root.ids.main.update_month_menu_group()

                MDScreen:
                    BoxLayoutButton:
                        pos_hint: {'center_x': .5,}
                        adaptive_width: True
                        height: self.parent.height
                        size_hint_x: None
                        md_bg_color: .6, .1, .2, 1
                        spacing: dp(10)

                        MDIcon:
                            id: month_icon
                            icon: root.days_in_month_icon_dict[root.days_in_current_menu_month]
                            size_hint: None, None
                            height: dp(25)
                            width: self.height
                            pos_hint: {'right': 0, 'center_y': 0.5}
                        MDScreen:
                            size_hint_x: None
                            width: month_label.width
                            MDLabel:
                                id: month_label
                                text: root.current_menu_month_name
                                font_size: '18sp'
                                halign: 'left'
                                valign: 'center'

                MDIconButton:
                    icon: 'arrow-right'
                    icon_size: "24sp"
                    pos_hint: {"center_x": .5, "center_y": .5}
                    on_release:
                        root.load_next_month()
                        app.root.ids.main.update_month_menu_group()

        MDBoxLayout:
            id: tab_manager
            orientation: 'horizontal'
            pos_hint: {'top': 1}
            spacing: dp(5)
            size_hint_y: None
            height: dp(50)

            BoxLayoutToggleButton:
                id: CategoriesButton

                md_bg_color: [0.3, 0.3, 0.3, 1.0]
                size_hint: 1, 1

                on_release:
                    self.md_bg_color = [0.3, 0.3, 0.3, 1.0]
                    category_screens.transition.direction = 'right'
                    category_screens.current = 'Categories'
                    IncomesButton.md_bg_color = [0.15, 0.15, 0.15, 1.0]

                MDLabel:
                    text: "Categories"
                    halign: 'center'
                    valign: 'center'



            BoxLayoutToggleButton:
                id: IncomesButton

                md_bg_color: [0.15, 0.15, 0.15, 1.0]
                size_hint: 1, 1

                on_release:
                    self.md_bg_color = [0.3, 0.3, 0.3, 1.0]
                    category_screens.transition.direction = 'left'
                    category_screens.current = 'Incomes'
                    CategoriesButton.md_bg_color = [0.15, 0.15, 0.15, 1.0]

                MDLabel:
                    text: "Incomes"
                    halign: 'center'
                    valign: 'center'


        MDScreenManager:
            id: category_screens

            MDScreen:
                name: 'Categories'
                ScreenManager:
                    id: my_swiper
                    size_hint_y: None
                    height: root.height - top_bar.height - tab_manager.height - dp(10)
                    y: root.height - self.height - top_bar.height - tab_manager.height - dp(10)

                    Categories_buttons_menu:
                        id: buttons_menu
                        name: root.current_menu_date


            MDScreen:
                name: 'Incomes'

                ScreenManager:
                    id: incomes_swiper
                    size_hint_y: None
                    height: root.height - top_bar.height - tab_manager.height - dp(10)
                    y: root.height - self.height - top_bar.height - tab_manager.height - dp(10)

                    Incomes_buttons_menu:
                        id: incomes_buttons_menu
                        name: root.current_menu_date
