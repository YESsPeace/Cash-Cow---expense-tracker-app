<WaterFill>:
    width: self.height
    size_hint: None, None
    color: 0, 0, 0, .25

    canvas.before:
        Color:
            rgba: root.color

        Ellipse:
            pos: root.pos
            size: root.size


        StencilPush
        Ellipse:
            pos: root.pos
            size: root.size

        StencilUse

        Color:
            rgb: root.color[:-1]

        Rectangle:
            pos: root.pos
            size: (root.width, root.level * root.height)

        StencilUnUse

        StencilPop

        StencilUnUse

<Categories_buttons_menu>:
    md_bg_color: .125, .125, .125, 1

    MDScrollView:
        size_hint: 1, None
        pos_hint_y: 1
        size: self.parent.size
        adaptive_height: True



        MDGridLayout:
            id: GridCategoriesMenu
            size_hint_y: None
            padding: dp(5)
            spacing: dp(1)
            adaptive_height: True
            cols: 4
