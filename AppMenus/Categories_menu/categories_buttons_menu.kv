<CategoryItem>:
    orientation: 'vertical'

    AnchorLayout:
        size_hint_y: None
        height: category_button.height

        WaterFill:
            size: category_button.size
            level: root.button_level
            color: root.category_data['Color']

        MDIconButton:
            id: category_button
            icon: str(root.category_data['Icon'])
            md_bg_color: root.category_data['Color']
            on_release: root.on_release()

    MDLabel:
        text: str(root.category_data['Name'])
        halign: 'center'


<WaterFill>:
    width: self.height
    size_hint: None, None
    color: 0, 0, 0, .25

    canvas:
        Color:
            rgba: root.color

        Ellipse:
            pos: root.pos
            size: root.size


        StencilPush
        Ellipse:
            pos: root.pos
            size: root.size

        StencilUse

        Color:
            rgb: root.color[:-1]

        Rectangle:
            pos: root.pos
            size: (root.width, root.level * root.height)

        StencilUnUse

        StencilPop

        StencilUnUse

<Categories_buttons_menu>:
    md_bg_color: .125, .125, .125, 1

    RecycleView:
        id: Categories_rv
        key_viewclass: 'viewclass'
        key_size: 'height'

        RecycleGridLayout:
            default_size: None, dp(56)
            default_size_hint: 1, None
            size_hint_y: None
            height: self.minimum_height
            cols: 4
