<AccountsMenu_main>:
    md_bg_color: 1, 1, 1, 1

    ScrollView:
        size_hint: 1, None
        size: self.parent.size

        MDGridLayout:
            size_hint_y: None
            cols: 1
            height: accounts_box.height + savings_box.height

            MDScreen:
                id: accounts_box  # green
                md_bg_color: .2, .8, .5, 1
                size_hint_y: None
                height: dp(60*len(root.accounts_data_dict))

                MDBoxLayout:
                    id: accounts_title

                    orientation: 'horizontal'
                    size_hint: 1, None
                    size: 0, dp(40)
                    pos_hint: {'top': 1}
                    padding: 12
                    md_bg_color: .3, .1, .5, 1

                    MDLabel:
                        text: 'ACCOUNTS'
                        font_size: dp(15)
                        halign: 'left'

                    Label:
                        id: accounts_amount
                        font_size: dp(15)
                        halign: 'right'
                        size_hint_x: None
                        size: self.texture_size

                        canvas.before:
                            Color:
                                rgba: .6, .2, .7, 1
                            Rectangle:
                                size: self.size
                                pos: self.pos

                MDBoxLayout:  # dark_red
                    id: accounts_Boxlines

                    orientation: 'vertical'
                    padding: dp(5)
                    spacing: dp(5)
                    md_bg_color: .2, 0, .1, 1
                    size_hint_y: None
                    size: self.parent.size[0], self.parent.size[1] - accounts_title.size[1]


            MDScreen:
                id: savings_box
                md_bg_color: .5, .2, .8, 1  # purple
                size_hint_y: None
                height: dp(60*len(root.savings_data_dict))

                MDBoxLayout:
                    id: savings_title

                    orientation: 'horizontal'
                    size_hint: 1, None
                    height: dp(40)
                    pos_hint: {'top': 1}
                    padding: 12
                    md_bg_color: 0, .2, .7, 1

                    MDLabel:
                        text: 'SAVINGS'
                        font_size: dp(15)

                    Label:
                        id: savings_amount
                        font_size: dp(15)
                        size_hint_x: None
                        size: self.texture_size

                        canvas.before:
                            Color:
                                rgba: 0, .2, 1, 1
                            Rectangle:
                                size: self.size
                                pos: self.pos


                MDBoxLayout:  # dark_blue
                    id: savings_Boxlines
                    orientation: 'vertical'
                    md_bg_color: 0, .2, .3, 1
                    padding: dp(5)
                    spacing: dp(5)
                    size_hint_y: None
                    size: self.parent.size[0], self.parent.size[1] - savings_title.size[1]
