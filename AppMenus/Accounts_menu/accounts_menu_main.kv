<AccountsMenu_main>:
    ScrollView:
        size_hint: 1, None
        size: self.parent.size
        adaptive_height: True

        MDGridLayout:
            size_hint_y: None
            cols: 1
            adaptive_height: True

            MDBoxLayout:
                id: accounts_title

                orientation: 'horizontal'
                size_hint: 1, None
                height: dp(40)
                pos_hint: {'top': 1}
                padding: dp(12)
                md_bg_color: .3, .1, .5, 1

                MDLabel:
                    text: 'ACCOUNTS'
                    font_size: dp(15)
                    halign: 'left'

                Label:
                    id: accounts_amount
                    font_size: dp(15)
                    halign: 'right'
                    size_hint_x: None
                    size: self.texture_size

                    canvas.before:
                        Color:
                            rgba: .6, .2, .7, 1
                        Rectangle:
                            size: self.size
                            pos: self.pos

            MDBoxLayout:  # dark_red
                id: accounts_Boxlines

                orientation: 'vertical'
                padding: dp(5)
                spacing: dp(5)
                md_bg_color: .2, 0, .1, 1
                size_hint_y: None
                adaptive_height: True




            MDBoxLayout:
                id: savings_title

                orientation: 'horizontal'
                size_hint: 1, None
                height: dp(40)
                pos_hint: {'top': 1}
                padding: 12
                md_bg_color: 0, .2, .7, 1

                MDLabel:
                    text: 'SAVINGS'
                    font_size: dp(15)

                Label:
                    id: savings_amount
                    font_size: dp(15)
                    size_hint_x: None
                    size: self.texture_size

                    canvas.before:
                        Color:
                            rgba: 0, .2, 1, 1
                        Rectangle:
                            size: self.size
                            pos: self.pos


            MDBoxLayout:  # dark_blue
                id: savings_Boxlines
                orientation: 'vertical'
                md_bg_color: 0, .2, .3, 1
                padding: dp(5)
                spacing: dp(5)
                size_hint_y: None
                adaptive_height: True
