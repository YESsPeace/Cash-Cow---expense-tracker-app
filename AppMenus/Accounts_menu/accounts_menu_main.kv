<AccountsMenu_main>:
    md_bg_color: 1, 1, 1, 1

    MDScreen:
        id: accounts_box  # green
        md_bg_color: .2, .8, .5, 1
        pos_hint: {'top': 1}
        size_hint_y: None
        size: 0, 100*3

        MDBoxLayout:
            id: accounts_title

            orientation: 'horizontal'
            size_hint: 1, None
            size: 0, dp(40)
            pos_hint: {'top': 1}
            padding: 12
            md_bg_color: .3, .1, .5, 1

            MDLabel:
                text: 'ACCOUNTS'
                font_size: 15
                size_hint_x: .95

            Label:
                text: '16'
                font_size: 15
                size_hint_x: 0.05
                size: self.texture_size

                canvas.before:
                    Color:
                        rgba: .6, .2, .7, 1
                    Rectangle:
                        size: self.size
                        pos: self.pos

        MDBoxLayout:  # dark_red
            id: accounts_Boxlines

            orientation: 'vertical'
            spacing: dp(5)
            md_bg_color: .2, 0, .1, 1
            size_hint_y: None
            size: self.parent.size[0], self.parent.size[1] - accounts_title.size[1]


    MDScreen:
        id: savings_box
        md_bg_color: .5, .2, .8, 1  # purple
        size_hint_y: None
        size: 0, self.parent.size[1] - accounts_box.size[1]
        pos: self.parent.pos[0], accounts_box.pos[1] - self.size[1]

        MDBoxLayout:
            id: savings_title

            orientation: 'horizontal'
            size_hint: 1, None
            size: 0, dp(40)
            pos_hint: {'top': 1}
            padding: 12
            md_bg_color: 0, .2, .7, 1

            MDLabel:
                text: 'SAVINGS'
                font_size: 15
                size_hint_x: .95

            Label:
                text: '0'
                font_size: 15
                size_hint_x: 0.05
                size: self.texture_size

                canvas.before:
                    Color:
                        rgba: 0, .2, 1, 1
                    Rectangle:
                        size: self.size
                        pos: self.pos

        MDBoxLayout:  # dark_blue
            md_bg_color: 0, .2, .3, 1
            size_hint_y: None
            size: self.parent.size[0], self.parent.size[1] - accounts_title.size[1]
