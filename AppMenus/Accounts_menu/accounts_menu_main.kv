<AccountsItem>:
    MDAnchorLayout:
        size_hint_x: None
        width: dp(60)
        padding: dp(20)
        md_bg_color: root.account_data['Color']

        MDIconButton:
            icon: str(root.account_data['Icon'])

    MDLabel:
        text: str(root.account_data['Name'])

    MDLabel:
        text: str(root.account_data['Balance'])
        halign: 'right'


<type_label>:
    MDLabel:
        text: str(root.text)


<AccountsMenu_main>:
    md_bg_color: app.theme_color

    RecycleView:
        id: accounts_rv
        key_viewclass: 'viewclass'
        key_size: 'height'

        RecycleBoxLayout
            default_size: None, dp(56)
            default_size_hint: 1, None
            size_hint_y: None
            height: self.minimum_height
            orientation: 'vertical'
            spacing: dp(5)