<AccountsMenu>:
    MDBoxLayout:
        orientation: 'vertical'

        MDBoxLayout:
            id: top_bar
            pos_hint: {"top": 1}
            orientation: 'vertical'
            size_hint_y: None
            height: top_btn_bar.height
            md_bg_color: .6, .1, .2, 1

            MDBoxLayout:
                id: top_btn_bar
                orientation: 'horizontal'
                size_hint_y: None
                height: dp(60)

                MDIconButton:
                    icon: ''
                    size_hint_y: 1
                    width: self.height

                MDLabel:
                    id: total_balance_label

                    text: str(root.total_accounts_balance)
                    halign: "center"
                    valign: "middle"
                    font_style: 'H4'


                MDIconButton:
                    icon: 'plus'
                    size_hint_y: 1
                    width: self.height

                    on_release:
                        root.open_menu_for_new_account()

        MDScreen:
            AccountsMenu_main:
                id: AccountsMenu_main_id