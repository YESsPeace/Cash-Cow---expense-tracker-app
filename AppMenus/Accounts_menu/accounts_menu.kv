<AccountsMenu>:
    MDBoxLayout:
        orientation: 'vertical'

        MDBoxLayout:
            id: top_bar
            pos_hint: {"top": 1}
            orientation: 'vertical'
            size_hint_y: None
            height: top_btn_bar.height

            MDBoxLayout:
                id: top_btn_bar
                orientation: 'horizontal'
                size_hint_y: None
                height: dp(60)
                md_bg_color: .5, .7, .3, 1

                MDIconButton:
                    icon: 'menu'
                    size_hint_y: 1
                    width: self.height

                    on_release:
                        nav_drawer.set_state("open")

                    canvas.before:
                        Color:
                            rgba: .9, .7, .3, 1
                        Rectangle:
                            pos: self.pos
                            size: self.size

                MDLabel:
                    id: total_balance_label

                    text: str(root.total_accounts_balance)
                    font_size: 26
                    halign: "center"
                    valign: "middle"


                MDIconButton:
                    icon: 'plus'
                    size_hint_y: 1
                    width: self.height

                    on_release:
                        root.open_menu_for_new_account()

                    canvas.before:
                        Color:
                            rgba: .9, .7, .3, 1
                        Rectangle:
                            pos: self.pos
                            size: self.size

        MDScreen:
            AccountsMenu_main:
                id: AccountsMenu_main_id

    MyNavigationDrawer:
        id: nav_drawer