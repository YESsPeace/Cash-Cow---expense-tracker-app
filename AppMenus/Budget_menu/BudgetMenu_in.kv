<InvisibleButton>:
    opacity: 0
    size_hint: (1, None)
    height: dp(60)

<BudgetMenu_in>:
    md_bg_color: .125, .125, .125, 1

    MDScrollView:
        size_hint: 1, None
        pos_hint_y: 1
        size: self.parent.size
        adaptive_height: True

        MDBoxLayout:
            size_hint_y: None
            md_bg_color: .7, .4, .55, 1
            orientation: 'vertical'
            padding: dp(3)
            spacing: dp(3)
            adaptive_height: True

            MDBoxLayout:
                id: categories_budget
                md_bg_color: .1, .5, .1, 1
                orientation: 'vertical'
                padding: dp(3)
                spacing: dp(3)
                size_hint_y: None
                adaptive_height: True

                MDBoxLayout:
                    id: all_categories_budget
                    md_bg_color: .45, .3, .1, 1
                    orientation: 'vertical'
                    size_hint_y: None
                    height: dp(60)

                    MDBoxLayout:
                        MDLabel:
                            text: 'Expenses'
                            halign: 'left'
                        MDLabel:
                            text: '$0'
                            halign: 'right'

                    MDScreen:
                        ProgressBar:
                            id: all_categories_ProgressBar
                            max: 100
                            value: 0

                    MDBoxLayout:
                        MDLabel:
                            id: spent_label
                            text: 'spent: $0'
                            halign: 'left'

                        MDLabel:
                            id: budgeted_label
                            text: 'budgeted $0'
                            halign: 'right'

            MDBoxLayout:
                id: incomes_budget
                md_bg_color: .2, .5, .1, 1
                orientation: 'vertical'
                padding: dp(3)
                spacing: dp(3)
                size_hint_y: None
                adaptive_height: True

                MDBoxLayout:
                    id: all_incomes_budget
                    md_bg_color: .45, .3, .1, 1
                    orientation: 'vertical'
                    size_hint_y: None
                    height: dp(60)

                    MDBoxLayout:
                        MDLabel:
                            text: 'Incomes'
                            halign: 'left'
                        MDLabel:
                            text: '$0'
                            halign: 'right'

                    MDScreen:
                        ProgressBar:
                            id: all_incomes_ProgressBar
                            max: 100
                            value: 0

                    MDBoxLayout:
                        MDLabel:
                            id: incomes_label
                            text: 'income: $0'
                            halign: 'left'

                        MDLabel:
                            id: budgeted_incomes_label
                            text: 'budgeted $0'
                            halign: 'right'

            MDBoxLayout:
                id: savings_budget
                md_bg_color: .3, .5, .1, 1
                orientation: 'vertical'
                padding: dp(3)
                spacing: dp(3)
                size_hint_y: None
                adaptive_height: True

                MDBoxLayout:
                    id: all_savings_budget
                    md_bg_color: .45, .3, .1, 1
                    orientation: 'vertical'
                    size_hint_y: None
                    height: dp(60)

                    MDBoxLayout:
                        MDLabel:
                            text: 'savings'
                            halign: 'left'
                        MDLabel:
                            text: '$0'
                            halign: 'right'

                    MDScreen:
                        ProgressBar:
                            id: all_savings_ProgressBar
                            max: 100
                            value: 0

                    MDBoxLayout:
                        MDLabel:
                            id: savings_label
                            text: 'saved: $0'
                            halign: 'left'

                        MDLabel:
                            id: budgeted_savings_label
                            text: 'budgeted $0'
                            halign: 'right'