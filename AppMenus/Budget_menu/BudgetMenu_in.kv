<BudgetItem>:
    orientation: 'vertical'

    MDBoxLayout:
        orientation: 'horizontal'
        MDLabel:
            text: root.item_name
            halign: 'left'

        MDLabel:
            text: str(root.budgeted)
            halign: 'right'

    MDScreen:
        size_hint_y: 1.25

        MDProgressBar:
            value: (root.real_sum / root.budgeted) * 100 if root.budgeted > 0 else 0

    MDBoxLayout:
        orientation: 'horizontal'
        MDLabel:
            text: str(root.real_sum)
            halign: 'left'
            font_style: 'Caption'

        MDLabel:
            text: str(root.budgeted)
            halign: 'right'
            font_style: 'Caption'

<BudgetTitle>:
    orientation: 'vertical'

    MDBoxLayout:
        orientation: 'horizontal'
        MDLabel:
            text: root.type_name
            halign: 'left'

        MDLabel:
            text: str(root.budgeted)
            halign: 'right'

    MDScreen:
        size_hint_y: 1.25

        MDProgressBar:
            value: (root.real_sum / root.budgeted) * 100 if root.budgeted > 0 else 0

    MDBoxLayout:
        orientation: 'horizontal'

        MDLabel:
            text: str(root.real_sum)
            halign: 'left'
            font_style: 'Caption'

        MDLabel:
            text: str(root.budgeted)
            halign: 'right'
            font_style: 'Caption'

<BudgetMenu_in>:
    md_bg_color: app.theme_color

    RecycleView:
        id: Budget_rv
        key_viewclass: 'viewclass'
        key_size: 'height'

        RecycleBoxLayout:
            default_size: None, dp(56)
            default_size_hint: 1, None
            size_hint_y: None
            height: self.minimum_height
            orientation: 'vertical'
            spacing: dp(5)