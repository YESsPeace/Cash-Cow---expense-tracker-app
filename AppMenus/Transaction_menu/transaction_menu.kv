#: import SlideTransition kivy.uix.screenmanager.TransitionBase

<Transaction_menu>:
    id: Transaction_menu

    MDBoxLayout:
        id: top_bar
        pos_hint: {"top": 1}
        orientation: 'vertical'
        size_hint_y: None
        height: top_btn_bar.height + month_menu.height

        MDBoxLayout:
            id: top_btn_bar
            orientation: 'horizontal'
            size_hint_y: None
            height: dp(60)
            md_bg_color: .6, .1, .2, 1

            MDIconButton:
                icon: ''
                size_hint_y: 1
                width: self.height

                canvas.before:
                    Color:
                        rgba: .6, .1, .2, 1
                    Rectangle:
                        pos: self.pos
                        size: self.size

            MDLabel:
                id: total_balance_label

                text: str(root.total_accounts_balance)
                halign: "center"
                valign: "middle"
                font_style: 'H4'


            MDIconButton:
                icon: 'magnify'
                size_hint_y: 1
                width: self.height

                canvas.before:
                    Color:
                        rgba: .6, .1, .2, 1
                    Rectangle:
                        pos: self.pos
                        size: self.size


        MDBoxLayout:
            id: month_menu
            size_hint_y: None
            height: dp(40)

            md_bg_color: .6, .1, .2, 1

            MDIconButton:
                icon: 'arrow-left'
                icon_size: "24sp"
                pos_hint: {"center_x": .5, "center_y": .5}
                on_release:
                    my_swiper.transition.direction: 'left'
                    root.load_previous_month()
                    app.root.ids.main.update_month_menu_group()

            MDScreen:
                BoxLayoutButton:
                    pos_hint: {'center_x': .5,}
                    adaptive_width: True
                    height: self.parent.height
                    size_hint_x: None
                    md_bg_color: .6, .1, .2, 1
                    spacing: dp(10)

                    MDIcon:
                        id: month_icon
                        icon: root.days_in_month_icon_dict[root.days_in_current_menu_month]
                        size_hint: None, None
                        height: dp(25)
                        width: self.height
                        pos_hint: {'right': 0, 'center_y': 0.5}
                    MDScreen:
                        size_hint_x: None
                        width: month_label.width
                        MDLabel:
                            id: month_label
                            text: root.current_menu_month_name
                            font_size: '18sp'
                            halign: 'left'
                            valign: 'center'


            MDIconButton:
                icon: 'arrow-right'
                icon_size: "24sp"
                pos_hint: {"center_x": .5, "center_y": .5}
                on_release:
                    my_swiper.transition.direction: 'right'
                    root.load_next_month()
                    app.root.ids.main.update_month_menu_group()

    ScreenManager:
        id: my_swiper
        size_hint: None, None
        height: root.height - top_bar.height
        y: root.height - self.height - top_bar.height
        width: root.width

        Transaction_menu_in:
            id: Transaction_menu_in
            name: root.current_menu_date

    MDIconButton:
        id: new_transaction_button
        pos_hint: {'right': .97, 'top': .15}
        icon: 'android'
        md_bg_color: .6, .2, 0, 1
        on_release:
            root.open_menu_for_transaction_adding()
