<MenuForTransactionAdding>:
    size_hint: 1, .75
    pos_hint: {'center_x': .5}
    #elevation: 4
    TabbedPanel:
        id: tab_manager
        pos_hint: {'center_x': .5}
        do_default_tab: False
        tab_pos: 'top_mid'
        tab_width: self.width/3 - 7

        canvas.before:
            Color:
                rgba: 1, 0, .5, 1
            Rectangle:
                size: self.size
                pos: self.pos

        TabbedPanelItem:
            text: 'Income'

        TabbedPanelItem:
            id: expense_tab
            text: 'Expense'

            MDGridLayout:
                id: expense_layout
                md_bg_color: .9, .9, .9, 1
                spacing: dp(7)
                cols: 4

        TabbedPanelItem:
            id: transfer_tab
            text: 'Transfer'

            AccountsMenu_main:
                id: AccountsMenu_main

