<TransactionItem>:
    MDIconButton:
        icon: str(root.transaction_data['To'][1]['Icon'])
        md_bg_color: root.transaction_data['To'][1]['Color'][:-1]

    MDBoxLayout:
        orientation: 'vertical'
        padding: [dp(5), 0, 0, 0]
        spacing: dp(1)

        MDLabel:
            text: str(root.transaction_data['To'][1]['Name'])

        MDLabel:
            text: str(root.transaction_data['From'][1]['Name'])

    MDLabel:
        text: root.sign + str(float(root.transaction_data['ToSUM']))
        halign: 'right'
        color: root.color

<date_label>:
    MDLabel:
        text: str(root.date)


<Transaction_menu_in>:
    md_bg_color: app.theme_color
    MDBoxLayout:
        orientation: 'vertical'

        MDScreen:
            RecycleView:
                id: Transaction_rv
                key_viewclass: 'viewclass'
                key_size: 'height'

                RecycleBoxLayout:
                    default_size: None, dp(56)
                    default_size_hint: 1, None
                    size_hint_y: None
                    height: self.minimum_height
                    orientation: 'vertical'
                    spacing: dp(5)


