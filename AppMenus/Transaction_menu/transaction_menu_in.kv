<TransactionItem>:
    MDIconButton:
        icon: str(root.transaction_data['To'][1]['Icon'])
        md_bg_color: root.transaction_data['To'][1]['Color'][:-1]

    MDBoxLayout:
        orientation: 'vertical'
        padding: [dp(5), 0, 0, 0]
        spacing: dp(1)

        MDLabel:
            text: str(root.transaction_data['To'][1]['Name'])

        MDLabel:
            text: str(root.transaction_data['From'][1]['Name'])

    MDLabel:
        text: str(root.transaction_data['ToSUM'])
        halign: 'right'

<date_label>:
    MDLabel:
        text: str(root.date)


<Transaction_menu_in>:
    md_bg_color: 0, 0, 0, 0
    MDBoxLayout:
        orientation: 'vertical'

        MDBoxLayout:
            id: transaction_title
            orientation: 'horizontal'
            size_hint: 1, None
            height: dp(40)
            padding: dp(12), 0
            md_bg_color: .3, .1, .5, 1

            MDLabel:
                text: 'Before Balance'
                font_size: dp(16)
                halign: 'left'
                md_bg_color: .3, .6, .5, 1

            Label
                text: 'After Balance'
                font_size: dp(16)
                halign: 'right'
                size_hint_x: None
                size: self.texture_size
                canvas.before:
                    Color:
                        rgba: .3, .6, .8, 1
                    Rectangle:
                        pos: self.pos
                        size: self.size

        MDScreen:
            RecycleView:
                id: Transaction_rv
                key_viewclass: 'viewclass'
                key_size: 'height'

                RecycleBoxLayout:
                    default_size: None, dp(56)
                    default_size_hint: 1, None
                    size_hint_y: None
                    height: self.minimum_height
                    orientation: 'vertical'
                    spacing: dp(5)


