<Transaction_menu_in>:
    md_bg_color: 0, 0, 0, 0
    MDScrollView:
        size_hint: 1, None
        size: self.parent.size
        adaptive_height: True

        MDGridLayout:
            id: GridLayout_in_ScrollView
            size_hint_y: None
            adaptive_height: True
            cols: 1

            MDBoxLayout:
                id: transaction_title
                orientation: 'horizontal'
                size_hint: 1, None
                height: dp(40)
                #pos_hint: {'top': 1}
                md_bg_color: .3, .1, .5, 1

                MDLabel:
                    text: 'Before Balance'
                    font_size: dp(20)
                    padding: dp(12), 0
                    halign: 'left'
                    md_bg_color: .3, .6, .5, 1

                MDLabel
                    text: 'After Balance'
                    font_size: dp(20)
                    padding: dp(12), 0
                    halign: 'right'
                    md_bg_color: .3, .6, .8, 1
